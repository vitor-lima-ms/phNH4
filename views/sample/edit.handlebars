<div class="container">
  <div class="row">
    <div class="col-12 mt-3 text-center">
      <h1>Editar amostra {{sample.data.name}}</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4">
      <form action="/sample/edit" method="post">
        <input type="hidden" name="id" value="{{sample.id}}" />
        <div class="mb-3">
          <label for="name" class="form-label">Nome</label>
          <input
            type="text"
            class="form-control"
            name="name"
            value="{{sample.data.name}}"
          />
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Data de coleta</label>
          <input
            type="date"
            class="form-control"
            name="date"
            value="{{sample.data.date}}"
          />
        </div>
        <div class="mb-3">
          <label for="coordX" class="form-label">Coordenada X</label>
          <input
            type="text"
            class="form-control"
            name="coordX"
            value="{{sample.data.coordX}}"
          />
        </div>
        <div class="mb-3">
          <label for="coordY" class="form-label">Coordenada Y</label>
          <input
            type="text"
            class="form-control"
            name="coordY"
            value="{{sample.data.coordY}}"
          />
        </div>
        <div class="mb-3">
          <label for="coordZ" class="form-label">Coordenada Z</label>
          <input
            type="text"
            class="form-control"
            name="coordZ"
            value="{{sample.data.coordZ}}"
          />
        </div>
        <div class="mb-3">
          <label for="ProjectId" class="form-label">Projeto</label>
          <select class="form-select" name="ProjectId" required>
            {{#each projects}}
              <option value="{{this.id}}">{{this.code}}
                -
                {{this.company}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Editar</button>
      </form>
    </div>
    <div class="col-4"></div>
  </div>
</div>